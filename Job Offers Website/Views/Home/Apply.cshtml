@model Job_Offers_Website.Models.Job

@{
    ViewBag.Title = "التقدم للوظيفه";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>التقدم الي الوظيفه</h2>
        <div>
            @{ 
                if (ViewBag.Result != null)
                    {
                    <h3 class="alert alert-info">@ViewBag.Result</h3>
                    }
            }
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("أرسال رساله", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تأكيد" class="btn btn-success" />
            </div>
        </div>
    </div>
}
 
